@model ResetPasswordViewModel
@{
	ViewData["Title"] = "Сброс пароля";
}
 
<h2>@ViewData["Title"]</h2>
<hr />

<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="stylesheet" type="text/css" href="/css/loginfont/css/util.css">
	<link rel="stylesheet" type="text/css" href="~/css/loginfont/css/main.css">

</head>

<body>

	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<div class="login100-form-title" style="background-image: url(/css/loginfont/images/bg-01.jpg);">
					<span class="login100-form-title-1">
						Войти
					</span>
				</div>
				<form class="login100-form validate-form" id="form_log" method="post" asp-anti-forgery="true">
					<input asp-for="Code" type="hidden" />

					<div class="wrap-input100 validate-input m-b-26">
						<span class="label-input100">Пароль</span>
						<input class="input100" type="text" asp-for="Password"  placeholder="Введите пароль">
						<span class="focus-input100"></span>
					</div>

					<div class="wrap-input100 validate-input m-b-18">
						<span class="label-input100">Подтверждение</span>
						<input class="input100" type="password" asp-for="ConfirmPassword" placeholder="Введите повторно пароль">
						<span class="focus-input100"></span>
					</div>
					<div class="container-login100-form-btn">
						<input class="login100-form-btn" type="submit" value="Подтвердить сброс" />
					</div>
				</form>
			</div>
		</div>
	</div>


</body>

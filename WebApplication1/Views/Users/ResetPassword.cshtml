@model ResetPasswordViewModel
@{
	ViewData["Title"] = "Сброс пароля";
}
<link rel="stylesheet" type="text/css" href="/css/loginfont/css/util.css">
<link rel="stylesheet" type="text/css" href="~/css/loginfont/css/main.css">
<hr />

<div class="limiter">
	<div class="container-login100">
		<div class="wrap-login100">
			<div class="login100-form-title" style="background-image: url(/css/loginfont/images/bg-01.jpg);">
				<span class="login100-form-title-1">
					Сброс пароля
				</span>
			</div>

			<form class="login100-form validate-form" id="form_log" method="post" asp-anti-forgery="true">
				<div class="wrap-input100 validate-input m-b-26">
					<span class="label-input100">Пароль</span>
					<input class="input100" type="text" asp-for="Password" placeholder="Введите новый пароль">
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 validate-input m-b-26">
					<span class="label-input100">Подтверждение пароля</span>
					<input class="input100" type="text" asp-for="ConfirmPassword" placeholder="Подтвердите пароль">
					<span class="focus-input100"></span>
				</div>

				<div class="container-login100-form-btn">
					<input class="login100-form-btn" type="submit" value="Сбросить" />
				</div>
			</form>
		</div>
	</div>
</div>
@using WebApplication1.Models
@using WebApplication1.Controllers
@model WebApplication1.Models.Test
<style>
	button {
		margin: 6px;
		margin-left: 1px;
		margin-right: 20px;
	}
	input {
		width: 300px;
		height: 30px;
		margin: 5px;
	}
</style>
<main>
	<h1 class="text-center">@Model.Name</h1><br/>

	@foreach (var el in Model.Questions)
	{
		@foreach (var a in el)
		{
			@if (a.Key == "Category")
			{
				<h6>Категория: @ViewData[a.Value]</h6>
			}
		}
		@foreach (var a in el)
		{
			@if (a.Key == "Quantity")
			{
				<p>Кол-во вопросов: @a.Value</p>
			}
		}
	}
	<h5>Время на тест: @Model.Time</h5>

	<button class="btn btn-dark" type="button" id="b1">Создать ссылку</button>
	<label>Код:</label>
	<input id="cop" readonly="true"/>
	<div id="mess"></div>
</main>

<script type="text/javascript">
	$('#b1').click(function() {
		id = String("@Model.Id");
		$.ajax({
			type: 'GET',
			url:'/test/GetUrl?id=' + id,
			dataType: 'json',
			success: function(data) {
				let url = data.id;
				$("#cop").attr("value", url);
				var copyText = document.getElementById("cop");
				copyText.select();
				document.execCommand("copy");
				$("#mess").empty();
				$("#mess").show(0);
				$("#mess").append($('<p>',
					{
						'text': 'Код скопирован в буфер обмена'
					}));
				$("#mess").css('margin-left','180px');
				$("#mess").hide(3000);
			}
		});
		
	});
</script>